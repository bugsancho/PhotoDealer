.container
    form.form-horizontal(name="profileForm")
        fieldset
            legend
                | Edit Users
            table.table.table-striped.table-hover.table-bordered.text-center
                thead
                    tr.success
                        th.text-center.col-md-1
                            | Username
                        th.text-center.col-md-1
                            | Full Name
                        th.text-center.col-md-1
                            | Roles
                        th.text-center.col-md-1
                            | Cahnge role
                        th.text-center.col-md-1
                            | Balance
                        th.text-center.col-md-2
                            | Add money
                tbody
                    tr(ng-repeat="user in users")
                        td
                            | {{ user.username }}
                        td
                            | {{ user.firstName + ' ' + user.lastName}}
                        td
                            | {{ user.roles.join(', ') }}
                        td
                            select.form-control(ng-model="user.roles[0]")
                                option(value="{{ role }}", ng-repeat="role in roles", ng-selected="user.roles[0] == role")
                                    | {{ role }}
                        td
                            | {{ user.credits || 0 | currency:'$' }}
                        td
                            .input-group
                                input.form-control(type="number",step="0.10", ng-model="money[user._id]")
                                span.input-group-btn
                                    input.btn.btn-default(type="submit", value="Update User" ng-click="updateUser(user)")
