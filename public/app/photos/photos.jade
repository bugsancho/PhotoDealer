.container
    h1.text-center Photos
    .container.mrg-btm
        button.btn.btn-info.col-md-1.col-md-offset-8(ng-click='decreasePage()',ng-disabled='page <=1') Prev
        input.col-md-2(ng-model='page', type='number', min='1',placeholder="Page")
        button.btn.btn-info.col-md-1(ng-click='increasePage()') Next

    .container
        .row
            .col-md-4(ng-repeat="photo in photos")

                img(src="{{photo.pictureUrl}}", width="300px", height="300px",ng-click="redirectToDetails(photo._id)")
                p
